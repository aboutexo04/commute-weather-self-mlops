# Production Environment Variables Template
# 실제 배포 시 이 파일을 .env로 복사하고 실제 값으로 교체하세요

# AWS Credentials
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here

# KMA (Korea Meteorological Administration) API settings
KMA_AUTH_KEY=your_kma_api_key_here
KMA_STATION_ID=108  # 108 = Seoul, check KMA docs for other stations

# WandB (Weights & Biases) settings - Optional
WANDB_API_KEY=your_wandb_api_key_here
WANDB_PROJECT=commute-weather-mlops-prod
WANDB_ENTITY=  # Optional: your team/organization name

# S3 bucket for MLOps storage
COMMUTE_S3_BUCKET=my-mlops-symun

# Production specific settings
ENVIRONMENT=production
LOG_LEVEL=INFO
DEBUG=false

# Redis configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# MLflow configuration (S3 기반)
MLFLOW_TRACKING_URI=http://mlflow-server:5000
MLFLOW_BACKEND_STORE_URI=file:///app/mlflow
MLFLOW_DEFAULT_ARTIFACT_ROOT=s3://my-mlops-symun/mlflow-artifacts

# Security settings
SECRET_KEY=your_super_secret_key_for_production_change_this
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# API Rate limiting
API_RATE_LIMIT=100  # requests per minute per IP

# Monitoring and alerting
SENTRY_DSN=  # Optional: for error tracking
PROMETHEUS_ENABLED=true